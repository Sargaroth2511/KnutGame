@page
@inject KnutGame.Services.ViteManifestService Manifest
@inject Microsoft.AspNetCore.Hosting.IWebHostEnvironment Env
@{
    Layout = null;
    ViewData["Title"] = "Knut Game";
    var js = Manifest.GetJs("src/main.ts");
    var cssFiles = Manifest.GetCss("src/main.ts");
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>

    @* Emit CSS from Vite manifest, if any *@
    @foreach (var href in cssFiles)
    {
        <link rel="stylesheet" href="@href" />
    }
</head>
<body>
    @if (Env.IsDevelopment())
    {
        <div style="position:fixed; top:10px; left:10px; z-index:10001;">
            <a href="/Docs" style="background:#ffffffdd; color:#1a1a1a; padding:6px 10px; border-radius:6px; text-decoration:none; font-weight:600; display:block; margin-bottom:5px;">View Docs</a>
            <a href="/developer_guide.html" style="background:#ffffffdd; color:#1a1a1a; padding:6px 10px; border-radius:6px; text-decoration:none; font-weight:600; display:block;">Developer Documentation</a>
        </div>
    }
    <div id="app"></div>

    @* Emit JS entry from Vite manifest, else show a dev hint *@
    @if (js is not null)
    {
        <script type="module" src="@js"></script>
    }
    else
    {
        @:<!-- No manifest found. Run `npm install && npm run build` in src/KnutGame.Client to generate /wwwroot/game/manifest.json -->
    }
</body>
</html>
